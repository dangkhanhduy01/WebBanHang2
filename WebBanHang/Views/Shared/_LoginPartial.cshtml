@using Microsoft.AspNetCore.Identity
@using WebBanHang.Models
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        
        <li class="nav-item">
            <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="/" method="post" class="d-inline">
                <button type="submit" class="btn btn-light text-dark">Logout</button>
            </form>
        </li>
    }
    else
    {



        <a asp-area="Identity" asp-page="/Account/Login" class="nav-link text-white">Sign in</a>
        <a asp-area="Identity" asp-page="/Account/Register" class="nav-link text-white">Register</a>

    }

</ul>
