@model WebBanHang.Areas.Customer.Models.Cart

<section class="bg-light my-5">
    <div class="container">
        <div class="row">
            <div class="col-lg-9">
                <div class="card border shadow-0">
                    <div class="m-4">
                        <h4 class="card-title mb-4">Your shopping cart</h4>
                        @foreach (var item in Model.Items)
                        {
                            <form asp-action="Update" method="post">
                                <input type="hidden" name="productId" value="@item.Product.Id" />
                                <div class="row gy-3 mb-4">
                                    <div class="col-lg-5">
                                        <div class="me-lg-5">
                                            <div class="d-flex">
                                                <img src="@item.Product.ImageUrl" class="border rounded me-3" style="width: 96px; height: 96px;" />
                                                <div class="">
                                                    <a href="#" class="nav-link">@item.Product.Name</a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-lg-2">
                                        <input type="number" name="qty" value="@item.Quantity" class="form-control" />
                                        <div>
                                            <text class="h6">@string.Format("{0:#,##0} đ", item.Product.Price)</text>
                                        </div>
                                    </div>
                                    <div class="col-lg">
                                        <button type="submit" class="btn btn-light border text-primary">Update</button>
                                        <a asp-action="Remove" asp-route-productId="@item.Product.Id" class="btn btn-light border text-danger">Remove</a>
                                    </div>
                                </div>
                            </form>
                        }
                    </div>
                </div>
            </div>

            <!-- Summary -->
            <div class="col-lg-3">
                <div class="card shadow-0 border mb-3">
                    <div class="card-body">
                        <h5 class="card-title mb-3">Summary</h5>
                        <div class="d-flex justify-content-between">
                            <p class="mb-2">Total price:</p>
                            <p class="mb-2">@string.Format("{0:#,##0} đ", Model.Total)</p>
                        </div>
                        <div class="d-flex justify-content-between">
                            <p class="mb-2">Discount:</p>
                            <p class="mb-2 text-danger">- 0 đ</p>
                        </div>
                        <div class="d-flex justify-content-between">
                            <p class="mb-2">Shipping cost:</p>
                            <p class="mb-2 text-success">+ 0 đ</p>
                        </div>
                        <hr />
                        <div class="d-flex justify-content-between">
                            <h6 class="mb-0">Total price:</h6>
                            <h6 class="mb-0 fw-bold">@string.Format("{0:#,##0} đ", Model.Total)</h6>
                        </div>
                    </div>
                </div>

                <div class="card shadow-0 border mb-3">
                    <div class="card-body">
                        <h6 class="mb-3">Items in cart</h6>
                        @foreach (var item in Model.Items)
                        {
                            <div class="d-flex align-items-center mb-2">
                                <img src="@item.Product.ImageUrl" style="width: 50px; height: 50px;" class="rounded border me-2" />
                                <div>
                                    <p class="mb-0">@item.Product.Name</p>
                                    <small class="text-muted">Total: @string.Format("{0:#,##0} đ", item.Product.Price * item.Quantity)</small>
                                </div>
                            </div>
                        }
                    </div>
                </div>

                <div class="d-grid gap-2">
                    <a href="/customer/order/index" class="btn btn-success">Thanh toán</a>
                    <a href="/customer/home/index" class="btn btn-outline-secondary">Quay lại mua hàng</a>
                </div>
            </div>



            <!-- End Summary -->
        </div>
    </div>
</section>
