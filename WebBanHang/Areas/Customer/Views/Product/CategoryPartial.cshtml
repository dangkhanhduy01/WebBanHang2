@model List<WebBanHang.Areas.Customer.Models.CategoryWithCountVM>


<ul class="list-group">
    @foreach (var c in Model)
    {
        <li class="list-group-item d-flex justify-content-between align-items-center">
            <a href="@Url.Action("Index", "Product", new { catid = c.Id })" class="text-decoration-none text-dark">
                @c.Name
            </a>
            <span class="badge bg-secondary rounded-pill">@c.ProductCount</span>
        </li>
    }
</ul>

